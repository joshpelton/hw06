#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>

int main()
{
    char str[100];
    int i=0;

    printf("Enter message to be encrypted:");
    scanf("%s", str);

    while(str[i])
    {
        printf("%d", str[i++]);
    }

    return 0;
}





